!!!
%html
%head
  %title Punchbowl
  = stylesheet_link_tag  "mango_tango", "formtastic", "formtastic_changes", "colorbox"
  = javascript_include_tag  "jquery-1.4.2.min", "jquery.validate.min", "jquery.colorbox.min", "application"
  = csrf_meta_tag 
%body
  #wrap
    #header
      %p{:class=>"notice"}= notice 
      %p{:class=>"alert"}= alert 
      
      %img{:alt=>"Powered by Mango", :class=>"powered-by-mango png_img", :src=>"/images/powered-by-mango.png?1285351421"}
      = yield :header_tag
    #main.png_img

      .content{:style=>'overflow:scroll;'}
        = yield 




